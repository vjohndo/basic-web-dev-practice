<%- include("partials/header"); %>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle">
    </div>
    <div class="form-group">
        <label for="postContent">Post</label>
        <textarea class="form-control" name="postContent" id="postContent" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="composeButton">Publish</button>
</form>
<%- include("partials/footer"); %>